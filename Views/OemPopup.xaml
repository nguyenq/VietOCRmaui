<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="VietOCR.Views.OemPopup">
    <ScrollView VerticalScrollBarVisibility="Default">
        <VerticalStackLayout Padding="20">
            <Label Text="OCR Engine Mode" HorizontalOptions="Center" FontAttributes="Bold"></Label>
            <VerticalStackLayout x:Name="VLayout" RadioButtonGroup.GroupName="{Binding GroupName}" RadioButtonGroup.SelectedValue="{Binding Selection}">
            </VerticalStackLayout>                   
            <HorizontalStackLayout HorizontalOptions="Center">
                <Button Text="Change" Clicked="ButtonChange_Clicked"></Button>
                <Button Text="Close" Clicked="ButtonClose_Clicked"></Button>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</toolkit:Popup>
